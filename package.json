{
  "name": "css-declarations",
  "version": "1.0.3",
  "description": "Parse and stringify CSS declarations",
  "license": "MIT",
  "keywords": [
    "dom",
    "html",
    "css",
    "style",
    "declaration",
    "declarations",
    "parse",
    "stringify"
  ],
  "repository": "wooorm/css-declarations",
  "bugs": "https://github.com/wooorm/css-declarations/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "css": "^2.2.1",
    "vendors": "^1.0.0",
    "vfile-location": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.4.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js -s cssDeclarations > css-declarations.js",
    "build-mangle": "esmangle css-declarations.js > css-declarations.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "object-shorthand": "off"
    },
    "ignores": [
      "css-declarations.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
