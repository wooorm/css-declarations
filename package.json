{
  "name": "css-declarations",
  "version": "1.0.0",
  "description": "Parse and stringify CSS declarations",
  "license": "MIT",
  "keywords": [
    "dom",
    "html",
    "css",
    "style",
    "declaration",
    "declarations",
    "parse",
    "stringify"
  ],
  "dependencies": {
    "camelcase": "^2.1.0",
    "css": "^2.2.1",
    "param-case": "^1.1.2",
    "vendors": "^1.0.0",
    "vfile-location": "^2.0.0"
  },
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/css-declarations.git"
  },
  "bugs": "https://github.com/wooorm/css-declarations/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "devDependencies": {
    "browserify": "^13.0.0",
    "eslint": "^3.2.0",
    "esmangle": "^1.0.1",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^4.0.0",
    "remark-comment-config": "^3.0.0",
    "remark-github": "^4.0.1",
    "remark-lint": "^3.0.0",
    "remark-usage": "^3.0.0",
    "remark-validate-links": "^3.0.0",
    "tape": "^4.4.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s cssDeclarations > css-declarations.js",
    "build-mangle": "esmangle css-declarations.js > css-declarations.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
